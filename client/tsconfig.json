{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "target": "es6",
        "lib": ["es6", "dom"],
        "jsx": "react",
        "moduleResolution": "node",
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    },
    "include": [
        "assets/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}