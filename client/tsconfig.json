{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "../node_modules/*",
                "../src/types/*"
            ]
        }
    },
    "include": [
        "assets/**/*.ts"
    ]
}